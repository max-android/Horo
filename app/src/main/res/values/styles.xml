<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions" tools:ignore="lollipop">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTitulTextViewStyle" parent="Theme.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/titul_margin</item>
        <item name="android:layout_marginTop">@dimen/text_horo_padding</item>
        <item name="android:layout_marginLeft">@dimen/titul_text_horo_padding</item>


    </style>

    <style name="MyTextViewStyle" parent="MyTitulTextViewStyle">

        <item name="android:layout_marginLeft">@dimen/text_horo_padding</item>

        <item name="android:textSize">@dimen/text_size</item>

        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyTextViewPressStyle" parent="MyTitulTextViewStyle">
        <item name="android:layout_marginLeft">@dimen/text_horo_padding</item>

        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginTop">@dimen/press_margin</item>
        <item name="android:layout_marginBottom">@dimen/press_margin</item>

        <item name="android:background">@drawable/horo_selector</item>
        <item name="android:foreground">?selectableItemBackground</item>



        <item name="android:padding">@dimen/press_padding</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="MyCardViewStyle" parent="Theme.AppCompat">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">@color/colorScreen</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
